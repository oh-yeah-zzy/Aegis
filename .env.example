# Aegis 配置示例
# 复制此文件为 .env 并修改配置

# 应用配置
APP_NAME=Aegis
APP_VERSION=0.1.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite+aiosqlite:///./aegis.db
# PostgreSQL (生产环境)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/aegis

# JWT 配置
# 重要：请在生产环境中修改此密钥！
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 网关配置
GATEWAY_TIMEOUT=30
GATEWAY_MAX_RETRIES=3

# 上游服务配置（ServiceAtlas）
UPSTREAM_SERVICE_URL=http://localhost:8001

# 审计日志配置
AUDIT_LOG_ENABLED=true

# CORS 配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 服务注册配置（ServiceAtlas）
REGISTRY_ENABLED=true
REGISTRY_URL=http://localhost:9000
REGISTRY_SERVICE_ID=aegis
REGISTRY_SERVICE_NAME=Aegis 权限网关
REGISTRY_SERVICE_HOST=127.0.0.1
REGISTRY_HEARTBEAT_INTERVAL=30
